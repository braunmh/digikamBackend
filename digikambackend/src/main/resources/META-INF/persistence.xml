<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="digikam" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/digikam</jta-data-source>
    <class>org.braun.digikam.backend.entity.Albums</class>
    <class>org.braun.digikam.backend.entity.Images</class>
    <class>org.braun.digikam.backend.entity.ImageCopyright</class>
    <class>org.braun.digikam.backend.entity.ImageInformation</class>
    <class>org.braun.digikam.backend.entity.ImageComments</class>
    <class>org.braun.digikam.backend.entity.ImageFull</class>
    <class>org.braun.digikam.backend.entity.Tags</class>
    <class>org.braun.digikam.backend.entity.Thumbnail</class>
    <class>org.braun.digikam.backend.entity.VideoFull</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
  </persistence-unit>
</persistence>
