<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
   <persistence-unit name="digikam" transaction-type="JTA">
      <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
      <jta-data-source>jdbc/digikam</jta-data-source>
      <class>org.braun.digikam.backend.ejb.Tags</class>
      <class>org.braun.digikam.backend.ejb.Images</class>
      <class>org.braun.digikam.backend.ejb.ImageCopyright</class>
      <class>org.braun.digikam.backend.ejb.ImageFull</class>
      <class>org.braun.digikam.backend.ejb.ImageComments</class>
      <class>org.braun.digikam.backend.ejb.ImageInformation</class>
      <class>org.braun.digikam.backend.ejb.VideoFull</class>
      <class>org.braun.digikam.backend.api.Thumbnail</class>
      <exclude-unlisted-classes>false</exclude-unlisted-classes>
      <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
   </persistence-unit>
</persistence>
